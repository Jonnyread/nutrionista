<%= render "meals/back" %>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">
			<div class="panel-heading center">
				<%= image_tag @meal.image.url(:medium) %>
			</div>
			
			<div class="panel-body">
				<p>
				  <strong>Thoughts on this meal:</strong>
				  <%= @meal.description %>
				</p>

				<p>
					<strong>Created by:</strong>
					<%= @meal.user.email if @meal.user %>
				</p>

				<div class="center">
					<% if @meal.user == current_user %>
						<%= link_to raw('<span class="glyphicon glyphicon-edit"></span> Edit this Meal'), edit_meal_path(@meal), class: "btn btn-primary" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>

