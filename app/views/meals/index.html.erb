<h1>Listing meals</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th>User Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= image_tag meal.image.url(:medium) %></td>
        <td><%= meal.description %></td>
        <td><%= meal.user.email if meal.user %></td>

        <td><%= link_to 'Show', meal %></td>
        <% if meal.user == current_user %>
          <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
          <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Meal', new_meal_path, class: "btn btn-primary" %>
<% end %>
